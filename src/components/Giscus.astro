---
interface Props {
    repo: string;
    repoId: string;
    category: string;
    categoryId: string;
    mapping: string;
    term?: string;
    strict?: string;
    reactionsEnabled?: string;
    emitMetadata?: string;
    inputPosition?: string;
    theme?: string;
    lang?: string;
    loading?: string;
}

const {
    repo,
    repoId,
    category,
    categoryId,
    mapping,
    term = "",
    strict = "0",
    reactionsEnabled = "1",
    emitMetadata = "0",
    inputPosition = "bottom",
    theme = "light",
    lang = "en",
    loading = "lazy"
} = Astro.props;
---

<div class="giscus-wrapper">
    <script
        src="https://giscus.app/client.js"
        data-repo={repo}
        data-repo-id={repoId}
        data-category={category}
        data-category-id={categoryId}
        data-mapping={mapping}
        data-strict={strict}
        data-reactions-enabled={reactionsEnabled}
        data-emit-metadata={emitMetadata}
        data-input-position={inputPosition}
        data-theme={theme}
        data-lang={lang}
        data-loading={loading}
        crossorigin="anonymous"
        async
    ></script>
</div>

<style>
    .giscus-wrapper {
        margin-top: 2rem;
    }
</style>
