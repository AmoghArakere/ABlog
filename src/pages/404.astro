---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Page Not Found - ABlog" description="The page you're looking for doesn't exist">
    <div class="flex flex-col items-center justify-center min-h-[70vh] px-4 text-center">
        <h1 class="text-4xl md:text-6xl font-bold mb-6 text-white">404</h1>
        <h2 class="text-2xl md:text-3xl font-semibold mb-4 text-white">Page Not Found</h2>
        <p class="text-gray-400 mb-8 max-w-md">The page you're looking for doesn't exist or has been moved.</p>
        <a href="/" class="px-6 py-3 bg-purple-600 text-white rounded-md hover:bg-purple-700 transition-colors">
            Return Home
        </a>
    </div>
</Layout>
